<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<HBox xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            prefHeight="800.0" prefWidth="1300.0"
            styleClass="discover-main" stylesheets="/css/Discover.css">

    <!-- The category chooser -->
    <VBox styleClass="category-chooser" minWidth="200" maxWidth="200">
        <Label text="Categories" styleClass="category-header"/>
        <Button prefHeight="35" text="Horror" styleClass="category-option">
            <graphic>
                <Label text="&#xf015;" styleClass="category-option-icon"/>
            </graphic>
        </Button>
    </VBox>

    <!-- Books displaying section -->
    <VBox>
        <Pane minHeight="100" maxHeight="100"/>
        <Label text="1432 books" styleClass="category-option"/>
        <ScrollPane HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS" prefWidth="1100" styleClass="book-display">
            <Label text="This displays books"/>
        </ScrollPane>
    </VBox>
</HBox>
