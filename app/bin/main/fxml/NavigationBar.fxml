<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<HBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      stylesheets="/css/NavigationBar.css"
      styleClass="nav-bar" prefHeight="100" prefWidth="1600">

    <!-- Tomfoolery app logo -->
    <ImageView fitWidth="230" fitHeight="40">
        <Image url="/menu_logo.png"/>
    </ImageView>

    <!-- Spacing between logo and search bar -->
    <Pane HBox.hgrow="ALWAYS"/>

    <!-- Search bar -->
    <HBox styleClass="search-bar" prefHeight="100" prefWidth="600">
        <Label text="&#xf002;" styleClass="search-icon"/>
        <TextField promptText="Search for books" styleClass="search-text"/>
    </HBox>

    <!-- Spacing between search bar and profile button -->
    <Pane HBox.hgrow="ALWAYS"/>

    <!-- Notification icon -->
    <Button styleClass="notification-button" prefWidth="50" prefHeight="50" fx:id="notificationButton">
        <graphic>
            <Label text="&#xf0f3;" styleClass="notification-icon"/>
        </graphic>
    </Button>

    <MenuButton styleClass="profile-button" prefHeight="50" prefWidth="50" fx:id="profileButton">
        <graphic>
            <ImageView fitHeight="50" fitWidth="50">
                <Image url="/profile_icon.png"/>
            </ImageView>
        </graphic>
        <items>
            <MenuItem text="Login"/>
            <MenuItem text="Settings"/>
            <MenuItem text="Change Password"/>
        </items>
    </MenuButton>
</HBox>