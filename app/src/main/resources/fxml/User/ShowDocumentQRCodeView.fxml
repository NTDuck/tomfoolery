<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.image.ImageView?>
<VBox alignment="CENTER" prefHeight="1080.0" prefWidth="1920.0" style="-fx-background-color: transparent;"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml">
    <padding>
        <Insets left="600.0" right="600.0"/>
    </padding>
    <VBox alignment="TOP_CENTER" prefHeight="750.0" prefWidth="920.0" spacing="20.0"
          style="-fx-background-color: white; -fx-background-radius: 10;">
        <effect>
            <DropShadow/>
        </effect>

        <Label text="Showing QR Code for:">
            <font>
                <Font name="System Bold" size="40.0"/>
            </font>
        </Label>

        <Label fx:id="titleLabel" text="Thrill of the hunt">
            <font>
                <Font size="24.0"/>
            </font>
        </Label>

        <ImageView fitHeight="530.0" fitWidth="530.0" pickOnBounds="true" fx:id="qrCode"/>

        <Button mnemonicParsing="false" prefHeight="40.0" prefWidth="100.0" text="Close" fx:id="closeButton"
            style="-fx-background-color: #80A0C0; -fx-background-radius: 10; -fx-text-fill: white;">
            <font>
                <Font size="20.0"/>
            </font>
        </Button>
    </VBox>
</VBox>
