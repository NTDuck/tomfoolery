<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      styleClass="content-container" stylesheets="/css/Admin/StaffAccountsManagementView.css"
      VBox.vgrow="ALWAYS"
      HBox.hgrow="ALWAYS">

    <Button fx:id="createStaffAccountButton" text="Add a staff" styleClass="create-button"/>

    <TableView fx:id="staffAccountsTable"
               styleClass="accounts-table"
               VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn text="ID" prefWidth="50">
                <cellValueFactory>
                    <PropertyValueFactory property="id"/>
                </cellValueFactory>
            </TableColumn>

            <TableColumn text="Username" prefWidth="100">
                <cellValueFactory>
                    <PropertyValueFactory property="username"/>
                </cellValueFactory>
            </TableColumn>

            <TableColumn text="Created by" prefWidth="120">
                <cellValueFactory>
                    <PropertyValueFactory property="createdAdminID"/>
                </cellValueFactory>
            </TableColumn>

            <TableColumn text="Last modified by" prefWidth="180">
                <cellValueFactory>
                    <PropertyValueFactory property="lastModifiedAdminID"/>
                </cellValueFactory>
            </TableColumn>

            <TableColumn text="Created at" prefWidth="120">
                <cellValueFactory>
                    <PropertyValueFactory property="createdAt"/>
                </cellValueFactory>
            </TableColumn>

            <TableColumn text="Last modified" prefWidth="130">
                <cellValueFactory>
                    <PropertyValueFactory property="lastModifiedAt"/>
                </cellValueFactory>
            </TableColumn>

            <TableColumn fx:id="updateColumn"/>
            <TableColumn fx:id="deleteColumn"/>
        </columns>

        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>
</VBox>