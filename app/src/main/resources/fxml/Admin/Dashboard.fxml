<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml" prefWidth="1600"
   prefHeight="900"
   stylesheets="/css/MainMenuStyle.css"
   fx:controller="org.tomfoolery.configurations.monolith.gui.view.Patron.DiscoverView">

   <!-- NAVIGATION BAR -->
   <HBox stylesheets="/css/NavigationBar.css"
      styleClass="nav-bar" prefHeight="100" prefWidth="1600" HBox.hgrow="ALWAYS">

      <!-- Tomfoolery app logo -->
      <ImageView fitWidth="230" fitHeight="40">
         <Image url="/images/menu_logo.png" />
      </ImageView>

      <!-- Spacing between logo and search bar -->
      <Pane HBox.hgrow="ALWAYS" />

      <!-- Search bar -->
      <HBox styleClass="search-bar" prefHeight="100" prefWidth="600">
         <ImageView fitWidth="25" fitHeight="25">
            <Image url="/images/search.png" />
         </ImageView>
         <TextField fx:id="searchField" promptText="Search for books" styleClass="search-text" />
      </HBox>

      <!-- Spacing between search bar and profile button -->
      <Pane HBox.hgrow="ALWAYS" />

      <!-- Notification icon -->
      <Button styleClass="notification-button" prefWidth="50" prefHeight="50"
         fx:id="notificationButton">
         <graphic>
            <ImageView fitHeight="25" fitWidth="25">
               <Image url="/images/bell.png" />
            </ImageView>
         </graphic>
      </Button>

      <MenuButton styleClass="profile-button" prefHeight="50" prefWidth="50"
         fx:id="profileButton">
         <graphic>
            <ImageView fitHeight="35" fitWidth="35">
               <Image url="/images/user.png" />
            </ImageView>
         </graphic>
         <items>
            <MenuItem text="Settings" />
            <MenuItem text="Change Password" />
         </items>
      </MenuButton>
   </HBox>

   <!-- Below navigation bar -->
   <HBox prefWidth="1600" prefHeight="800" VBox.vgrow="ALWAYS" styleClass="below-navbar">
      <!-- The sidebar -->
      <VBox minWidth="300" maxWidth="300" styleClass="sidebar" HBox.hgrow="ALWAYS"
         stylesheets="/css/Sidebar.css">
         <!-- Dashboard option -->
         <Button prefHeight="35" text=" Dashboard" styleClass="sidebar-option"
            fx:id="sidebarDashboardButton" onAction="#goToDashboard">
            <graphic>
               <ImageView fitHeight="30" fitWidth="30">
                  <Image url="/images/home.png" />
               </ImageView>
            </graphic>
         </Button>
         <Pane prefHeight="30" />

         <!-- Explore option -->
         <Button prefHeight="35" text=" Discover" styleClass="sidebar-option"
            fx:id="sidebarDiscoverButton" onAction="#goToDiscover">
            <graphic>
               <ImageView fitHeight="30" fitWidth="30">
                  <Image url="/images/search.png" />
               </ImageView>
            </graphic>
         </Button>
         <Pane prefHeight="30" />
      </VBox>

      <!-- Content area -->
      <HBox fx:id="content" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS" />
   </HBox>
</VBox>