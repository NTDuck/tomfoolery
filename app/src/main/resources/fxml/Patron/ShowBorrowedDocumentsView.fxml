<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.control.cell.PropertyValueFactory?>
<VBox minHeight="-Infinity" minWidth="-Infinity" HBox.hgrow="ALWAYS"
      prefHeight="720.0" prefWidth="1200.0" spacing="20.0" stylesheets="/css/Patron/ShowBorrowedDocumentsView.css"
      styleClass="root" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">
    <Label prefHeight="70.0" prefWidth="1160.0" style="-fx-border-color: gray; -fx-border-width: 0 0 2 0;"
           text="Borrowed documents">
        <font>
          <Font name="Segoe UI Variable" size="40.0"/>
        </font>
    </Label>
    <TableView prefHeight="600.0" prefWidth="1160.0" styleClass="documents-table" fx:id="documentsTable">
      <columns>
          <TableColumn text="Number" fx:id="numberColumn">

          </TableColumn>

          <TableColumn prefWidth="100" text="ISBN">
              <cellValueFactory>
                  <PropertyValueFactory property="ISBN"/>
              </cellValueFactory>
          </TableColumn>
          <TableColumn prefWidth="400.0" text="Title">
              <cellValueFactory>
                  <PropertyValueFactory property="title"/>
              </cellValueFactory>
          </TableColumn>
          <TableColumn prefWidth="300.0" text="Authors">
              <cellValueFactory>
                  <PropertyValueFactory property="authors"/>
              </cellValueFactory>
          </TableColumn>

          <TableColumn prefWidth="70.0" fx:id="readColumn">

          </TableColumn>
          <TableColumn prefWidth="70.0" fx:id="rateColumn">

          </TableColumn>
          <TableColumn prefWidth="70.0" fx:id="returnColumn">

          </TableColumn>
      </columns>
        <columnResizePolicy>
          <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>
</VBox>
