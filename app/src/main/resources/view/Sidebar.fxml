<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<VBox
    xmlns="http://javafx.com/javafx"
    xmlns:fx="http://javafx.com/fxml"
    minWidth="300" maxWidth="300" styleClass="sidebar" HBox.hgrow="ALWAYS"
    stylesheets="/css/Sidebar.css">

    <!-- Dashboard option -->
    <Button prefHeight="35" text=" Dashboard" styleClass="sidebar-option">
        <graphic>
            <ImageView fitHeight="30" fitWidth="30">
                <Image url="/images/home.png"/>
            </ImageView>
        </graphic>
    </Button>
    <Pane prefHeight="30"/>

    <!-- Explore option -->
    <Button prefHeight="35" text=" Discover" styleClass="sidebar-option">
        <graphic>
            <ImageView fitHeight="30" fitWidth="30">
                <Image url="/images/search.png"/>
            </ImageView>
        </graphic>
    </Button>
    <Pane prefHeight="30"/>

    <!-- Favourite option -->
    <Button prefHeight="35" text=" Favourite" styleClass="sidebar-option">
        <graphic>
            <ImageView fitHeight="30" fitWidth="30">
                <Image url="/images/heart.png"/>
            </ImageView>
        </graphic>
    </Button>
</VBox>